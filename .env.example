# Cannabis Data Aggregator — Environment Variables
# Copy this file to .env and fill in your values
# DO NOT commit .env — it contains secrets

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
FLASK_ENV=development
FLASK_SECRET_KEY=change-this-to-a-random-secret-key-in-production
FLASK_DEBUG=false
APP_PORT=5000
APP_HOST=0.0.0.0

# Admin credentials for the Flask dashboard
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme
ADMIN_EMAIL=you@example.com

# =============================================================================
# DATABASE
# =============================================================================

# SQLite (default — zero setup required)
# DATABASE_URL=sqlite:///data/cannabis_aggregator.db

# PostgreSQL
# DATABASE_URL=postgresql://username:password@localhost:5432/cannabis_data

# MySQL / MariaDB — Python SQLAlchemy (PyMySQL driver)
DATABASE_URL=mysql+pymysql://username:password@localhost:3306/cannabis_data

# MySQL / MariaDB — PHP PDO (used by web/includes/config.php)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=cannabis_data
MYSQL_USER=username
MYSQL_PASSWORD=password

# =============================================================================
# SOCRATA / OPEN DATA API TOKENS
# Optional — greatly increases rate limits on Socrata-based state APIs
# Register at: https://dev.socrata.com/register
# =============================================================================
SOCRATA_APP_TOKEN=
SOCRATA_USERNAME=
SOCRATA_PASSWORD=

# =============================================================================
# STATE-SPECIFIC APP TOKENS (Socrata portals)
# =============================================================================
AZ_APP_TOKEN=
CA_APP_TOKEN=
CO_APP_TOKEN=
IL_APP_TOKEN=
MA_APP_TOKEN=
OK_APP_TOKEN=
OR_APP_TOKEN=
WA_APP_TOKEN=

# =============================================================================
# FEDERAL API KEYS
# =============================================================================
# USDA AMS hemp licensing — https://apps.ams.usda.gov/
USDA_API_KEY=

# Congress.gov API — https://api.congress.gov/
CONGRESS_API_KEY=

# Google Maps (optional, for enhanced geocoding)
GOOGLE_MAPS_API_KEY=

# =============================================================================
# SCHEDULER
# =============================================================================
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=America/New_York
SCHEDULER_MISFIRE_GRACE_SECS=3600

# =============================================================================
# DATA STORAGE
# =============================================================================
RAW_DATA_DIR=data/raw
PROCESSED_DATA_DIR=data/processed
LOG_DIR=logs
MAX_RAW_FILE_MB=500

# =============================================================================
# COLLECTION
# =============================================================================
REQUEST_TIMEOUT=60
DEFAULT_PAGE_SIZE=5000
MAX_RETRIES=3
RETRY_DELAY=5
USER_AGENT=CannabisDataAggregator/1.0 (Open Data Collector)

# =============================================================================
# NOTIFICATIONS (optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
NOTIFY_EMAIL=

SLACK_WEBHOOK_URL=

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
