# DATA STORAGE SETTINGS
# =============================================================================
RAW_DATA_DIR=data/raw
PROCESSED_DATA_DIR=data/processed
LOG_DIR=logs
# Max raw file size before archiving (MB)
MAX_RAW_FILE_MB=500

# =============================================================================
# COLLECTION SETTINGS
# =============================================================================
# Default request timeout in seconds
REQUEST_TIMEOUT=60
# Default records per page for paginated APIs
DEFAULT_PAGE_SIZE=5000
# Max retries on failed requests
MAX_RETRIES=3
# Delay between retries (seconds)
RETRY_DELAY=5
# User agent string for HTTP requests
